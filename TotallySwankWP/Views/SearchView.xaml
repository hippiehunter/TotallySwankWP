        <TextBox x:Name="SearchBar"
                 VerticalAlignment="Top" 
                 Margin="12,30" RenderTransformOrigin="0.5,0.5"
                 KeyDown="SearchBar_KeyDown"
                 InputScope="Search"
                 LostFocus="SearchBar_LostFocus">

            <TextBox.RenderTransform>
                <CompositeTransform />
            </TextBox.RenderTransform>
